<!doctype html>
<html>
  <head>
    <title>
      Service information
    </title>
  </head>

  <body>
    <article>
      <% if e = result[:exception] %>
      <div class="error">
        <h3>Connection <%= result[:uri] %></h3>
        raised an exception:
        <p>
          <%= e.message %>
          <% e.backtrace[0, 12].each do |line| %>
            <%= line %><br/>
          <% end %>
        </p>
      </div>
      <% else %>
        <div class="success">
          <%= partial :stomp, :result => result %>
        </div>
      <% end %>
    </article>
  </body>
</html>
